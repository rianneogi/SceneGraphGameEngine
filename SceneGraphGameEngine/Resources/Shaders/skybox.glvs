#version 330

layout (location = 0) in vec3 Position;
layout (location = 1) in vec3 UV;
layout (location = 2) in vec3 Normal;

uniform mat4 M;
uniform mat4 V;
uniform mat4 P;

out vec3 TexCoord0;

void main()
{
    vec4 WVP_Pos = P*V*M * vec4(Position, 1.0);
    gl_Position = WVP_Pos.xyww;
    TexCoord0 = Position;
}