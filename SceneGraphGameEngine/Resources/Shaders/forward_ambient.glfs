#version 330 core
 
#ifdef MULTI_TEXTURE
in vec3 UV;
#elif defined(SOLID_COLOR)
in vec3 UV;
#else
in vec2 UV;
#endif
 
out vec4 color;

#ifdef MULTI_TEXTURE
uniform sampler2DArray textureSampler;
#else
uniform sampler2D textureSampler;
#endif
 
void main()
{ 
	#ifdef SOLID_COLOR
    color = 0.1*vec4(UV,1.0);
	#else
	color = 0.1*texture( textureSampler, UV );
	#endif
}